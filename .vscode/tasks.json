{
    "tasks": [
        {
            "type": "shell",
            "label": "Build crates",
            "windows": {
                "command": "${workspaceFolder}/crates/build.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/crates/make"
            },
            "options": {
                "cwd": "${workspaceFolder}/crates"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Build main",
            "windows": {
                "command": "${workspaceFolder}/src/build.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/src/make"
            },
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build Everything",
            "command": "${workspaceFolder}/build-all.bat",
            "windows": {
                "command": "${workspaceFolder}/build-all.bat",
            },
            "linux": {
                "command": "make"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "shell",
            "label": "Run Valgrind",
            "linux": {
                "command": "make vrun"
            },
            "windows": {
                "command": ""
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            }
        }
    ],
    "version": "2.0.0"
} 